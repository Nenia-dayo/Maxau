{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Maxau",
  "version": "0.1.0",
  "identifier": "com.nenia.maxau",
  "build": {
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Maxau",
        "width": 1280,
        "height": 720,
        "resizable": true,
        "fullscreen": false,
        "closable": true,
        "minimizable": true,
        "maximizable": true,
        "hiddenTitle": false,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APPDATA/**",
          "$RESOURCE/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
