{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Maxau",
  "version": "0.1.0",
  "identifier": "com.nenia.maxau",
  "build": {
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Maxau",
        "width": 1280,
        "height": 720,
        "resizable": true,
        "fullscreen": false,
        "closable": true,
        "minimizable": true,
        "maximizable": true,
        "hiddenTitle": false,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; script-src 'self'; img-src 'self' data: asset: https://asset.localhost; media-src 'self' asset: https://asset.localhost http: https:; connect-src 'self' http: https:;",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APPDATA/**",
          "$RESOURCE/**",
          "$AUDIO/**",
          "$MUSIC/**"
        ]
      },
      "capabilities": [
        "default"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "allowDowngrades": false,
      "wix": {
        "language": "en-US"
      },
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "currentUser"
      }
    }
  },
  "plugins": {
    "fs": {
      "scope": [
        "$AUDIO/**",
        "$MUSIC/**",
        "$HOME/Music/**"
      ]
    }
  }
}
