<?xml version="1.0" encoding="utf-8"?>
<Package 
  xmlns="http://schemas.microsoft.com/appx/manifest/foundation/windows10"
  xmlns:uap="http://schemas.microsoft.com/appx/manifest/uap/windows10"
  xmlns:rescap="http://schemas.microsoft.com/appx/manifest/foundation/windows10/restrictedcapabilities">
  
  <Identity 
    Name="com.nenia.maxau" 
    Publisher="CN=Nenia" 
    Version="0.1.0.0" />
  
  <Properties>
    <DisplayName>Maxau</DisplayName>
    <PublisherDisplayName>Nenia</PublisherDisplayName>
    <Logo>icons\StoreLogo.png</Logo>
  </Properties>
  
  <Dependencies>
    <TargetDeviceFamily Name="Windows.Desktop" MinVersion="10.0.26100.0" MaxVersionTested="10.0.26100.0" />
  </Dependencies>
  
  <Resources>
    <Resource Language="en-us" />
    <Resource Language="ja-jp" />
  </Resources>
  
  <Applications>
    <Application Id="Maxau" Executable="maxaugui.exe" EntryPoint="Windows.FullTrustApplication">
      <uap:VisualElements
        DisplayName="Maxau"
        Description="Focus Flow Music Experience - A modern music player"
        BackgroundColor="transparent"
        Square150x150Logo="icons\Square150x150Logo.png"
        Square44x44Logo="icons\Square44x44Logo.png">
        <uap:DefaultTile Wide310x150Logo="icons\StoreLogo.png" Square310x310Logo="icons\Square310x310Logo.png" Square71x71Logo="icons\Square71x71Logo.png">
        </uap:DefaultTile>
        <uap:SplashScreen Image="icons\StoreLogo.png" />
      </uap:VisualElements>
      <Extensions>
        <uap:Extension Category="windows.fileTypeAssociation">
          <uap:FileTypeAssociation Name="audio">
            <uap:SupportedFileTypes>
              <uap:FileType>.mp3</uap:FileType>
              <uap:FileType>.flac</uap:FileType>
              <uap:FileType>.ogg</uap:FileType>
              <uap:FileType>.wav</uap:FileType>
              <uap:FileType>.m4a</uap:FileType>
              <uap:FileType>.aac</uap:FileType>
              <uap:FileType>.opus</uap:FileType>
              <uap:FileType>.wma</uap:FileType>
              <uap:FileType>.m3u</uap:FileType>
              <uap:FileType>.m3u8</uap:FileType>
            </uap:SupportedFileTypes>
          </uap:FileTypeAssociation>
        </uap:Extension>
      </Extensions>
    </Application>
  </Applications>
  
  <Capabilities>
    <!-- UWP互換Capabilities -->
    <uap:Capability Name="musicLibrary" />
    <Capability Name="internetClient" />
    <Capability Name="internetClientServer" />
    
    <!-- Win32 App Isolation Capabilities -->
    <!-- ミュージックライブラリ外のファイルアクセス時にプロンプト表示 -->
    <rescap:Capability Name="isolatedWin32-promptForAccess" />
    
    <!-- 最小限のユーザープロファイルアクセス（設定保存など） -->
    <rescap:Capability Name="isolatedWin32-userProfileMinimal" />
  </Capabilities>
</Package>
